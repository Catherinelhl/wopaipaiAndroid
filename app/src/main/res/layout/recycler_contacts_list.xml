<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/d2">
    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="@dimen/d20" />

    <TextView
        android:id="@+id/tv_contact_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_14"
        android:textColor="#ff222222"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/d20"
        android:layout_toRightOf="@id/tv_contact_name"
        android:layout_toLeftOf="@id/tv_contact_coin_type"
        android:layout_marginRight="19dp"
        android:gravity="center_vertical" />
    <TextView
        android:id="@+id/tv_contact_coin_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_14"
        android:textColor="#ff222222"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d24"
        android:drawableRight="@mipmap/set_common_next"
        android:drawablePadding="@dimen/d5"/>
</RelativeLayout>