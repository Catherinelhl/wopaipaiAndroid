<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d48"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d12"
        android:drawableRight="@mipmap/icon_drop_down"
        android:drawablePadding="@dimen/d4"
        android:gravity="center"
        android:minWidth="@dimen/d57"
        android:minHeight="@dimen/d32"
        android:text="+86"
        android:textColor="@color/black_222222"
        android:textSize="@dimen/text_size_14" />

    <EditText
        android:id="@+id/et_middle_content"
        style="@style/black_14_edit_text_style"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/tv_left"
        android:background="@color/transparent"
        android:hint="@string/phone_account" />

    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d12"
        android:layout_toRightOf="@+id/tv_left"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_middle_password"
            style="@style/black_14_edit_text_style"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/cb_right_pwd"
            android:background="@color/transparent"
            android:digits="@string/password_rule"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:minHeight="@dimen/d24" />

        <CheckBox
            android:id="@+id/cb_right_pwd"
            android:layout_width="@dimen/d25"
            android:layout_height="@dimen/d25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:button="@drawable/selector_cb_password"
            android:checked="false"
            android:gravity="center" />
    </RelativeLayout>


</RelativeLayout>