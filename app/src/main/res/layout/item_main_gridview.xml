<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_grid_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="2.3"
        android:background="@color/grey_E2E2E4"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:id="@+id/ll_grid_item_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:layout_weight="1"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:padding="@dimen/d10">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black_222222"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:autoSizeMaxTextSize="@dimen/text_size_12"
            android:autoSizeMinTextSize="@dimen/text_size_8"
            android:autoSizeTextType="uniform"
            android:textColor="@color/orange_FAAE00"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>