<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my.WalletTurnOutActivity">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/set_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="24"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d15"
            android:background="@mipmap/saomiao"
            android:gravity="right|center_vertical"
            android:textAllCaps="false"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_flowlayout"
        android:layout_marginTop="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:layout_below="@id/title_layout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income_address"
                android:layout_gravity="center_vertical"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d20"/>
            <EditText
                android:id="@+id/et_income_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d43"
                android:hint="@string/cashier_wallet_address_please"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="@dimen/d25"
                android:maxEms="13"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_edit_text"/>
            <View
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/ib_income_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d15"
                android:background="@mipmap/income_man"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity_transferred"
                android:layout_gravity="center_vertical"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d20"/>
            <EditText
                android:id="@+id/et_income_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d43"
                android:hint="@string/current_assets"
                android:textSize="@dimen/text_size_12"
                android:maxLength="9"
                android:layout_marginLeft="@dimen/d25"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_edit_text"/>
            <View
                android:layout_width="@dimen/d0"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/ib_turnout_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/d15"
                android:background="@mipmap/add_coin"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trade_password"
                android:layout_gravity="center_vertical"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d20"/>
            <EditText
                android:id="@+id/et_transaction_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d43"
                android:hint="@string/transaction_password_please"
                android:maxLength="6"
                android:inputType="numberPassword"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="@dimen/d28"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miner_fee"
                android:layout_gravity="center_vertical"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d20"/>

            <TextView
                android:id="@+id/et_kuang_free"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d39"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d39"
                android:background="@drawable/bg_edit_text"
                android:gravity="center_vertical"
                android:text="0"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remarks"
                android:layout_gravity="center_vertical"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d20"/>
            <EditText
                android:id="@+id/tv_remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d43"
                android:textSize="@dimen/text_size_12"
                android:layout_marginLeft="@dimen/d25"
                android:maxLength="20"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_edit_text"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"/>
        <Button
            android:id="@+id/btn_sure_turnout"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:layout_marginRight="@dimen/d15"
            android:layout_marginTop="@dimen/d20"
            android:layout_marginBottom="@dimen/d20"
            android:background="@drawable/bg_button"
            android:text="@string/sure_turn_out"
            android:textColor="#fff3f3f3"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>